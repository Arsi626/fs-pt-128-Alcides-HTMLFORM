<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment form example</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f5f5f5;
        }

        .payment-card {
            max-width: 1100px;
            margin: 3rem auto;
        }

        .card-icons {
            background: #555;
            padding: .5rem 1rem;
            border-radius: .25rem;
            display: inline-flex;
            gap: .5rem;
        }

        .card-icon {
            width: 28px;
            height: 18px;
            background: #fff;
            border-radius: 3px;
            font-size: .55rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card-footer {
            background: #f6f6f6;
        }
    </style>
</head>

<body>

    <div class="card payment-card">
        <div class="card-header h4 mb-0">
            Payment form example
        </div>

        <div class="card-body">

            <!-- Alert -->
            <div class="alert alert-danger" role="alert">
                Some fields are missing
            </div>

            <!-- Form -->
            <form class="row g-3 mt-2">

                <!-- CARD ROW (fixed) -->
                <div class="col-md-7">
                    <label for="cardNumber" class="form-label">Card #</label>
                    <input type="text" class="form-control" id="cardNumber" placeholder="XXXXXXXXXXXXXXXX" />
                </div>

                <div class="col-md-2">
                    <label for="cvc" class="form-label">CVC #</label>
                    <input type="text" class="form-control" id="cvc" placeholder="0000" />
                </div>

                <div class="col-md-3">
                    <label for="amount" class="form-label">Amount</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" id="amount" placeholder="Amount" />
                    </div>
                </div>

                <!-- First / Last name -->
                <div class="col-md-6">
                    <label for="firstName" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="firstName" />
                </div>

                <div class="col-md-6">
                    <label for="lastName" class="form-label">Last Name</label>
                    <input type="text" class="form-control" id="lastName" />
                </div>

                <!-- City / State / Postal -->
                <div class="col-md-4">
                    <label for="city" class="form-label">City</label>
                    <input type="text" class="form-control" id="city" />
                </div>

                <div class="col-md-4">
                    <label for="state" class="form-label">State</label>
                    <select id="state" class="form-select">
                        <option selected>Pick a state</option>
                        <option>CA</option>
                        <option>NY</option>
                        <option>TX</option>
                        <!-- etc -->
                    </select>
                </div>

                <div class="col-md-4">
                    <label for="postal" class="form-label">Postal Code</label>
                    <input type="text" class="form-control" id="postal" />
                </div>

                <!-- WE ACCEPT + MESSAGE ROW (fixed) -->
                <div class="col-md-6">
                    <label class="form-label d-block">We accept:</label>
                    <div class="card-icons">
                        <div class="card-icon">MC</div>
                        <div class="card-icon">VISA</div>
                        <div class="card-icon">AMEX</div>
                        <div class="card-icon">DISC</div>
                    </div>
                </div>

                <div class="col-md-6">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" rows="4" placeholder="Add any notes here."></textarea>
                </div>

            </form>
        </div>

        <!-- Footer buttons -->
        <div class="card-footer d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-secondary">Cancel</button>
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </div>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>